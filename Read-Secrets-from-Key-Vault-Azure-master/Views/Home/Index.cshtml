@model KeyVaultAzure.Models.KeyVaultModel

@{
    ViewData["Title"] = "Login";
}

@using (Html.BeginForm("Login", "Home", FormMethod.Post))
{
    <fieldset>
        <legend>Read Secrets from Azure Key Vault</legend>
        <legend>Net Core 3.1 & Azure</legend>
        

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @if (@ViewBag.Message != null)
        {
            <div style="border: 1px solid red">
                @ViewBag.Message
            </div>
        }

    </fieldset>
    <table>
        <tr>
            <td>@Html.Label("Connection String")</td>
            <td>@Html.Label(Model.ConnectionStringKeyVault)</td>
            
        </tr>
        <tr>
            <td>@Html.Label("Token Key")</td>
            <td>@Html.Label(Model.TokenKeyVault)</td>
            
        </tr>
    </table>

}  